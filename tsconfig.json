{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/category/[...slug]/page.jsx", "src/app/product/[id]/page.jsx", "src/app/checkout/page.jsx", "src/app/page.jsx", "src/app/api/generate-pdf.js", "src/app/api/upload/route.js", "src/utils/telegram.ts", "src/utils/cloudinaryUploader.js", "src/app/not-found.jsx"],
  "exclude": ["node_modules"]
}
